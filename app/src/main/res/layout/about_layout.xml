<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewHelp"
                android:layout_width="225dp"
                android:layout_height="225dp"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/smart_parking_logo" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="userName"
                android:layout_below="@+id/imageViewHelp"
                android:textColor="@color/smartparking_red"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/version_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/version_number"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff397aa3"
                android:layout_gravity="center"
                android:layout_below="@+id/imageViewHelp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/thanksTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/conacytThanks"
                android:textColor="#ff397aa3"
                android:layout_gravity="center"
                android:layout_below="@+id/version_number"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </FrameLayout>

</ScrollView>